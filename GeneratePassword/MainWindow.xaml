        <TextBox Name="tbPass" Height="30" Margin="10,18,279,216" Canvas.Left="10" Canvas.Top="5" Width="192"   />

        <Button Name="btnGenPassword" Content="Генерировать пароль" Background="#FF007C80" Foreground="White" Margin="102,67,361,167" Click="btnGenPassword_Click" RenderTransformOrigin="0.5,0.5" Canvas.Left="-76" Height="26" Canvas.Top="-1" BorderBrush="#FFA77E7E"  >
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.605"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.196"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
    </Canvas>
</Window>
